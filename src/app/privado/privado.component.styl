.container
  height 100%
  max-height 100%
  display grid
  background-color lightgreen
  grid-template-rows 50px 1fr
  grid-auto-columns 250px 1fr
  grid-template-areas "menu-topo menu-topo" "menu-lateral root"


.menu-topo
  background-color lightcoral
  grid-area menu-topo

.menu-lateral
  background-color lightgreen
  grid-area menu-lateral

.root
  background-color lightseagreen
  grid-area root
  border-top-left-radius 15px
  padding 25px
  overflow-y auto

.notifications
  background-color lightsalmon
  text-align center
