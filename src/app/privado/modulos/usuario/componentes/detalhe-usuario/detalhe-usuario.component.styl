@import '../../../../../../stylus/cores'

.container-usuario
  background-image url('/assets/imagens/fundo-perfil.jpg')
  background-size cover
  //background-position right
  background-repeat no-repeat
  .status
    display table
    color #fff
    box-shadow 2px 2px 15px 1px rgba(0, 0, 0, 0.9)
    padding 3px 15px
    border-radius 9px
  .ativo
    background-color marca5
  .desativado
    background-color marca3
  .cabecalho, .rodape, .box-corpo
    display flex
    justify-content space-between
    align-items end
    flex-wrap wrap
  .rodape
    margin-top 15px
    padding 16px
    border-radius 9px
    background-color  rgba(0, 0, 0, 0.5)
  & > div
    font-weight 500
  .mb-16
    margin-bottom 16px

