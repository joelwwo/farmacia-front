@import '../../../../../../stylus/cores'

.box-header
  display flex
  justify-content center
  flex-wrap wrap
  position sticky
  top 0
  background-color luz
  z-index 1

.header
  display flex
  justify-content space-between
  flex-wrap wrap
  width 100vw
  margin 16px
  padding 10px
  background-color #fff
  border-radius 9px
  input
    min-width 160px
    max-width 60%
    //background-color #fff
  input, button
    margin 5px 0

.conteudo
  padding 0 1em
  position sticky!important
  top 166px
  overflow-y auto

/* Novo */
.box-usuarios
  width 100%
  display grid
  grid-template-columns repeat(auto-fill, minmax(280px, 1fr))
  grid-gap 10px
  place-content center
  padding 1em

.item-usuario
  display flex
  flex-direction column
  justify-content space-between
  padding 1em
  background-color #fff
  border-radius 9px
  & > div
    margin-bottom 1em
    :last-child
      margin-bottom 0
  .imagem
    display grid
    place-content center
    width 75px
    height 75px
    border-radius 50%
    background-color #022B3A
    color #fff
    font-size 40px
    text-transform uppercase
    padding 2px
    cursor pointer
  .informacoes
    margin-bottom 1em
  .informacoes, .footer
    display flex
    justify-content space-between
  .cpf, .nome, .email
    text-overflow ellipsis
    white-space nowrap
    overflow hidden
  .footer
    justify-content space-between
    align-items center
    .detalhes
      cursor pointer
      padding 3px 15px
      color #fff
      background-color #1abc9c
      border-radius 9px
