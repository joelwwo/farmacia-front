.container, .box-login
  display grid
  place-content center

.container
  height 100vh
  background-image linear-gradient(to bottom, rgba(245, 246, 252, 0.52), rgba(117, 19, 93, 0.73)), url('/assets/imagens/fundo.jpg')

.box-login
  width 250px
  height 400px
  background-color rgba(0,0,0, .2)
  height 300px
  border-radius 25px
  box-shadow 7px 10px 13px 0px rgba(0,0,0,0.38)
  & form
    text-align center
    div
      margin-bottom 15px
      display flex
      flex-direction column
      input
        padding 10px
