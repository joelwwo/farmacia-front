.modal-overlay
  z-index 999
  position fixed
  top 0
  left 0
  width 100%
  height: 100vh
  display flex
  justify-content center
  align-items center
  background-color rgba(0, 0, 0, 0.3)
  overflow hidden

  .modal
    background #fff
    padding 10px
    margin 0 5px
    position relative
    border-radius 3px
    z-index 1
    .btn-fechar
      background-color: #fff
      width 40px
      height 40px
      border-radius 20px
      margin-left auto
      color #000
      font-weight 100
      display flex
      justify-content center
      align-items center
      &:hover
        transition 200ms ease
        background-color #f5f5f5

