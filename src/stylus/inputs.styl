input[type='email'], input[type='text'],
input[type='password'], input[type='number'],
input[type='search'], select
  max-width 100%
  background-color luz
  padding 5px 10px
  border-radius 12px
  outline none
  border none
  font-size 14px
  color marca2
  font-weight 500
  font-family 'Poppins', sans-serif
  &::placeholder
    color marca5
    font-weight 500
  &:focus
    color marca1
    border 1px solid marca5
    transition border 1s
  &:disabled
    opacity .5
    cursor not-allowed
    color marca1
    transition border 1s
